<!DOCTYPE html>
<html>
<head>
    <title>All Batches</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        h1 {
            color: #007bff;
        }

        div {
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            width: 400px; /* Set the width as needed */
        }

        h2 {
            color: #007bff;
        }

        p {
            margin-bottom: 10px;
        }

        a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

        a:hover {
            text-decoration: underline;
        }

        nav {
            background-color: #007bff;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            margin-bottom: 20px;
        }

        .navbar-brand {
            color: #fff;
            text-decoration: none;
            font-size: 24px;
            font-weight: bold;
        }

        .logout-btn {
            background-color: #fff;
            color: #007bff;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .logout-btn:hover {
            background-color: #e6e6e6;
        }
    </style>
</head>
<body>
    <nav>
        <a class="navbar-brand" href="/">Iris</a>
        <form action="/logout" method="post">
            <button class="logout-btn" type="submit">Logout</button>
        </form>
    </nav>
    <h1>All Batches</h1>
    <% batches.forEach(batch => { %>
        <div>
            <h2><%= batch.BatchName %></h2>
            <p>Batch Year: <%= batch.BatchYear %></p>
            <p>Batch Department: <%= batch.BatchDept %></p>
            <p>Batch Programme: <%= batch.BatchProgramme %></p>
            <a href="/batch/<%= batch._id %>">View Details</a>
        </div>
    <% }) %>
</body>
</html>
