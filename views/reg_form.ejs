<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        h2 {
            color: #007bff;
        }

        form {
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            width: 400px;
        }

        div {
            margin-bottom: 10px;
        }

        input {
            margin-right: 10px;
        }

        label {
            display: inline-block;
            width: 80%;
        }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 20px;
        }

        button:hover {
            background-color: #0056b3;
        }

        nav {
            background-color: #007bff;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            margin-bottom: 20px;
        }

        .navbar-brand {
            color: #fff;
            text-decoration: none;
            font-size: 24px;
            font-weight: bold;
        }

        .logout-btn {
            background-color: #fff;
            color: #007bff;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .logout-btn:hover {
            background-color: #e6e6e6;
        }
    </style>
</head>
<body>
    <nav>
        <a class="navbar-brand" href="/">Iris</a>
        <form action="/logout" method="post">
            <button class="logout-btn" type="submit">Logout</button>
        </form>
    </nav>
    <form action="/register" method="post">
        <h2>Select Your Courses</h2>
        <% coursesInfo.forEach(course => { %>
            <div>
                <input
                    type="checkbox"
                    name="selectedCourses"
                    value="<%= course.CourseCode %>"
                    <%= course.CourseType === 'Mandatory Course' ? 'disabled checked' : '' %>
                >
                <% if (course.CourseType === 'Mandatory Course') { %>
                    <input
                        type="hidden"
                        name="selectedCourses"
                        value="<%= course.CourseCode %>"
                        checked
                    >
                <% } %>
                <label>
                    <%= course.CourseTitle %> - <%= course.schedule %> - <%= course.Credits %> Credits
                    (<%= course.CourseType %>)
                </label>
            </div>
        <% }); %>
    
        <button type="submit">Register</button>
    </form>
</body>
</html>
